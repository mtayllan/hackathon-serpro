                  <!-- Hospital name -->
                  <div class="row <%= list_classes(organization) %>%">
                    <button type="button" class="btn btn-pill btn-primary text-dark" style="padding: 1px 10px 1px 10px; height: 30px;">
                      <b> > </b>
                    </button>
                    <h4 class="card-title col-10"><%= organization.name %></h4>
                  </div>

                  <!-- Symbols -->
                  <% if covid_attendance_or_emergency(organization) %>
                    <div class="col-1 col-sm-3 col-md-2 mr-2">
                      <% if organization.covid_attendance? %>
                        <img src="/virus_icon.svg" class="mr-2" alt="virus">
                      <% end %>

                      <% if organization.has_emergency? %>
                        <img src="/emergency_alarm.svg" alt="sirene">
