<div class="mind-bg" style="height: 100vh">
  <div class="container-fluid">
    <%= render partial: 'app/shared/top' %>
    <div class="row ">
      <div class="example col-md-12 ml-auto mr-auto">
        <div class="row">
          <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
            <div class="card organization-card">
              <div class="card-body p-2">
                <div class="row">
                  <div class="col-12">
                    <h6 class="card-title ml-2"><%= @organization.name %></h6>
                  </div>
                  <div class="col-12">
                    <%= image_tag @organization.featured_image, class: 'img-fluid rounded mx-auto d-block' %>
                  </div>
                </div>
                <div class="media m-1">
                  <%= image_tag 'localization.svg', class: 'align-self-center mr-1' %>
                  <div class="media-body align-self-center">
                    <%= @organization.address.to_s %>
                  </div>
                </div>
                <div class="row align-items-center">
                  <div class="col-6 pr-0">
                    <div class="media m-1">
                      <%= image_tag 'health.svg', class: 'align-self-center mr-1' %>
                      <div class="media-body align-self-center">
                        Hospital Particular <small>Agendamento</small>
                      </div>
                    </div>
                  </div>
                  <div class="col-6 pr-0">
                    <div class="media m-1">
                      <%= image_tag 'covid.png', class: 'align-self-center mr-1' %>
                      <div class="media-body align-self-center">
                        Atende Pacientes COVID-19
                      </div>
                    </div>
                  </div>
                </div>
                <div class="media m-1">
                  <%= image_tag 'clock.svg', class: 'align-self-center mr-1' %>
                  <div class="media-body align-self-center">
                    Aberto (8:00 - 22:00)
                  </div>
                </div>
                <div class="media m-1">
                  <%= image_tag 'emergency.svg', class: 'align-self-center mr-1' %>
                  <div class="media-body align-self-center">
                    Possui Pronto-Atendimento (24h)
                  </div>
                </div>
                <div class="row mt-3">
                  <div class="col-6">
                    <div class="card">
                      <div class="card-header bg-primary text-white text-shadow p-0 text-center">
                        Planos
                      </div>
                      <ul class="list-group list-group-flush">
                        <% @organization.health_plans.each do |hp| %>
                          <li class="list-group-item mind-bg text-white py-0 pl-2"><small><%= hp.name %></small></li>
                        <% end %>
                      </ul>
                    </div>
                  </div>
                  <div class="col-6">
                    <% @organization.contacts.each do |contact| %>
                      <% if contact.phone? %>
                        <div class="media m-1">
                          <%= image_tag 'phone.svg', class: 'align-self-center mr-1' %>
                          <div class="media-body align-self-center">
                            <%= contact.value %>
                          </div>
                        </div>
                      <% elsif contact.whatsapp?%>
                        <%= link_to 'Whatsapp', "https://wa.me/55#{contact.value.delete("^0-9")}" ,class: 'btn btn-primary text-white text-shadow btn-block' %>
                      <% end %>
                    <% end %>
                  </div>
                </div>
                <% if @organization.has_emergency? %>
                  <div class="card text-white mt-2">
                    <div class="card-header bg-primary text-shadow p-0 text-center">
                      Pronto-Atendimento
                    </div>
                    <div class="card-body mind-bg p-2">
                      <div class="row">
                        <% if (phone = @organization.contacts.emergency.first) %>
                          <div class="col">
                            <div class="media m-1">
                              <%= image_tag 'phone.svg', class: 'align-self-center mr-1' %>
                              <div class="media-body align-self-center">
                                <%= phone.value %>
                              </div>
                            </div>
                          </div>
                        <% end %>
                        <% if (occupancy = @organization.occupancies.last) %>
                          <div class="col">
                            <div class="media m-1">
                              <%= image_tag 'clock_health.svg', class: 'align-self-center mr-1' %>
                              <div class="media-body align-self-center">
                                <b>Ocupação:</b> <br>
                                <%= occupancy.to_s %>
                              </div>
                            </div>
                          </div>
                        <% end %>
                      </div>
                      <div class="row">
                        <div class="col">
                          <table class="table table-sm text-white table-borderless">
                            <thead>
                              <tr>
                                <th>Especialidade</th>
                                <th>Ativo</th>
                              </tr>
                            </thead>
                            <tbody>
                              <% @organization.medic_expertises.to_a.uniq.each do |me| %>
                                <tr>
                                  <td><%= me.name %></td>
                                  <td><i class="fa fa-user" aria-hidden="true"></i> <%= me.medics.count %></td>
                                </tr>
                              <% end %>
                            </tbody>
                          </table>
                        </div>
                      </div>
                    </div>
                  </div>
                <% end %>
                <div class="card text-white mt-4">
                  <div class="card-header bg-primary text-white text-shadow p-0 text-center">
                    Especialidades
                  </div>
                  <div class="card-body mind-bg p-2">
                    <div class="row no-gutters">
                      <% @organization.expertises.each do |exp| %>
                        <div class="col-6">
                          <%= exp.name %>
                        </div>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="mx-auto">
          Informações desatualizadas?
          <button class="btn btn-primary btn-pill mb-2 ml-1 btn-sm shadow">
            <%= image_tag '/danger.svg', class: 'align-self-center mr-1' %>
            Reporte aqui
          </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
