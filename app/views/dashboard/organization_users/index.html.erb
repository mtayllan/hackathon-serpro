<p id="notice"><%= notice %></p>

<h1>Dashboard Organization Users</h1>

<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
  <thead>
    <tr>
      <th colspan="3"></th>
      <th>Email</th>
    </tr>
  </thead>

  <tbody>
    <% @organization_users.each do |organization_user| %>
      <tr>
        <td><%= organization_user.email %></td>
        <td><%= link_to 'Show', dashboard_organization_user_path(organization_user) %></td>
        <td><%= link_to 'Edit', edit_dashboard_organization_user_path(organization_user) %></td>
        <td><%= link_to 'Destroy', dashboard_organization_user_path(organization_user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>



