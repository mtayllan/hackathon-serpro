<%= form_for [:dashboard, @organization_user] do |f| %>
  <div class="form-group col-md-12">
    <%= f.label :email %>
    <%= f.email_field :email, class: 'form-control' %>
  </div>

  <div class="row">
  <div class="form-group col-md-6">
    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-control' %>
  </div>

  <div class="form-group col-md-6">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, class: 'form-control' %>
  </div>
  </div>

  <%= f.hidden_field :organization_id, value: current_organization_user.organization_id %>

  <%#= hidden_field_tag 'organization_id', current_organization_user.organization_id  %>

  <div class="row">
    <div class="col">
      <%= f.submit 'Salvar', class: 'btn btn-primary btn-block' %>
    </div>
    <div class="col-6"></div>
    <div class="col text-right">
      <%= link_to 'Voltar', dashboard_organization_users_path %>
    </div>
  </div>
<% end %>
