<div class="modal fade" id="newMedic" tabindex="-1" role="dialog" aria-labelledby="newMedicLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="newMedicLabel">Adicionar m√©dico</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_with url: dashboard_emergency_medics_path do |f| %>
          <div class="form-group">
            <select name="id" class="selectpicker" data-live-search='true' data-width='100%'>
              <% @medics.each do |medic| %>
                <option value="<%= medic.id %>" data-subtext="<%= medic.expertises.map(&:name).join(', ') %>"><%= medic.name %></option>
              <% end %>
            </select>
          </div>
          <%= f.submit 'Adicionar', class: 'btn btn-primary btn-block' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
